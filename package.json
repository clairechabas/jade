{
  "name": "bookmark-library",
  "version": "1.0.0",
  "description": "An application to store and organize your favorite web links.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "check-types": "turbo run check-types",
    "format": "turbo run format --continue",
    "format:root": "prettier -w .",
    "lint": "turbo run lint --continue",
    "lint:root": "eslint .",
    "test:unit": "turbo run test --continue",
    "test:e2e": "node scripts/run-tests-e2e.mjs",
    "tests": "pnpm run test:unit && pnpm run test:e2e"
  },
  "keywords": [
    "bookmark",
    "bookmark-manager",
    "links",
    "links-library",
    "browser-tabs",
    "browser-windows",
    "browser"
  ],
  "author": "clairechabas",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
